<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tumblrr.utd.com.stepcounter">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/footprints"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TrackStepsActivity"
            android:launchMode="singleInstance">
        </activity>

        <activity android:name=".HelpActivity"
            android:launchMode="singleInstance">
        </activity>

        <activity android:name=".StepDetectorActivity"
            android:launchMode="singleInstance">
        </activity>

        <activity android:name=".ReportActivity"
            android:launchMode="singleInstance">
        </activity>

        <!--Defining Service-->
        <service android:name="tumblrr.utd.com.stepcounter.StepCountingService">
        </service>
        <!--android:roundIcon="@mipmap/ic_launcher_round"-->
    </application>

</manifest>